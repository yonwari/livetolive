.snslogin
    - if devise_mapping.omniauthable?
      - resource_class.omniauth_providers.each do |provider|
          = link_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider)
.snslogin
    - if controller_name != 'sessions'
      = link_to "ログイン画面はこちら", new_session_path(resource_name)
.snslogin
    - if devise_mapping.registerable? && controller_name != 'registrations'
      = link_to "会員登録はこちら", new_registration_path(resource_name)
