.inquiry-background.body_content
  .row
    .inquiries.col-xs-4.col-xs-offset-4
      .top-message
        h2 お問い合わせフォーム
        p お問い合わせ内容をご入力ください。
      = form_with model: @inquiry, url: { action: :confirm }, local:true do |f|
        .form-group
          = f.label :name, "お名前"
          span.required *
          = f.text_field :name, class: "form-control ", placeholder:"例：山田太郎", required: true
        .form-group
          = f.label :email, "メールアドレス"
          span.required *
          = f.text_field :email, class: "form-control", placeholder:"例：example@aaa.com", required: true
        .form-group
          = f.label :message, "お問い合わせ内容"
          span.required *
          = f.text_area :message, class: "form-control", placeholder:"お問い合わせ内容", required: true
        .form-group
          = f.submit "確認", class:"btn btn-info center-block"